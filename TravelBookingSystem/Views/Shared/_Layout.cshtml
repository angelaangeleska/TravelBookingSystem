<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Travel Booking System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>

    @RenderSection("Styles", required: false)

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: #000000;
        }

        .navbar {
            background: linear-gradient(135deg, #003366, #004080 70%);
            border-bottom: 2px solid #002244;
        }

        .navbar-brand img {
            max-height: 50px;
        }

        .navbar-nav .nav-link {
            color: #ffffff;
        }

            .navbar-nav .nav-link:hover {
                color: #cce5ff;
            }

        .footer {
            background-color: #003366;
            color: #ffffff;
            padding: 10px;
            text-align: center;
        }

        .container {
            padding-top: 20px;
            padding-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="/Images/logo.png" alt="Global Travel" />
        </a>
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Packages", "Index", "Packages", new { area = "" }, new { @class = "nav-link" })</li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">@Html.ActionLink("Destinations", "Index", "Destinations", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Accommodations", "Index", "Accommodations", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("All Reservations", "Index", "Reservations", new { area = "" }, new { @class = "nav-link" })</li>
                }
                @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                {
                    <li class="nav-item">@Html.ActionLink("My Reservations", "UserReservations", "Reservations", new { area = "" }, new { @class = "nav-link" })</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - Global Travel</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
