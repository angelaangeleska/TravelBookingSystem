@model IEnumerable<TravelBookingSystem.Models.Accommodation>

@{
    ViewBag.Title = "Accommodations";
}

<div class="container">
    <p>
        @Html.ActionLink("Create New Accommodation", "Create", new { area = "" }, new { @class = "btn btn-primary" })
    </p>

    <table class="table table-striped" id="accommodationsTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <img src="@item.AccommodationImageURL" alt="@item.Name" class="img-thumbnail" style="width: 100px;" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#accommodationsTable").DataTable();
        });
    </script>
}