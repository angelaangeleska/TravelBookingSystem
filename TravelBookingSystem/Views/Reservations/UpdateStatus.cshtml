@model TravelBookingSystem.Models.Reservation

@using TravelBookingSystem.Models  

@{
    ViewBag.Title = "Update Reservation Status";
}

<h2>Update Reservation Status</h2>

@using (Html.BeginForm("UpdateStatusConfirmed", "Reservations", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.Id)

    <div class="form-group">
        @Html.Label("Status")
        @Html.DropDownList("Status", Enum.GetValues(typeof(ReservationStatus)).Cast<ReservationStatus>()
                                .Select(e => new SelectListItem { Text = e.ToString(), Value = e.ToString() }),
                                new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Update Status" class="btn btn-primary" />
    </div>
}
