@model TravelBookingSystem.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<main aria-labelledby="title">
    <div class="container mt-4">
        <h2 id="title" class="text-center mb-4">@ViewBag.Title</h2>

        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />

            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-3 col-form-label font-weight-bold" })
                <div class="col-md-9">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-3">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-3 col-form-label font-weight-bold" })
                <div class="col-md-9">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-4">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 col-form-label font-weight-bold" })
                <div class="col-md-9">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-md-3 col-md-9">
                    <input type="submit" value="Change Password" class="btn btn-dark" />
                </div>
            </div>
        }
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 0.25rem;
    }

    .btn-dark {
        background-color: #343a40;
        border-color: #343a40;
    }

        .btn-dark:hover {
            background-color: #23272b;
            border-color: #1d2124;
        }

    .font-weight-bold {
        font-weight: 700;
    }

    .text-danger {
        color: #dc3545;
    }

    .text-center {
        text-align: center;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }
</style>
